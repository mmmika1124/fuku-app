<h1>商品新規登録</h1>

<%= form_with model:@item, url:admin_items_path, method: :POST, local: true do |f| %>
  <div class="field">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
  </div>
  </br>
  <div class="field">
    <%= f.label :"商品説明" %>
    <%= f.text_area :introduction %>
  </div>
  </br>
  <div class="field">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => true %>
  </div>
  </br>
  <div class="field">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :price %> 円
  </div>
  </br>
  <div class="field">
    <%= f.label :"商品画像" %>
    <%= f.attachment_field :image %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

