<h1>商品詳細</h1>


<div class="container">
  <div class="row">
    <div class="col-5">
      <%= attachment_image_tag @item, :image, format: 'jpg', size: "300x300" %>
    </div>
    <div class="col-5">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <td>
            ￥<%= @item.price.to_s(:delimited) %>
            （￥<%= (@item.price * 1.1).floor.to_s(:delimited) %>）
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-dark" %>
    </div>
  </div>
  </br>
  </br>
  <div class="row">
    <h3>レビュー一覧</h3>
  </div>
</div>
