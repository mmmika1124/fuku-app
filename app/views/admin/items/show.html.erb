<!--raty.js-->
<script>
  $(document).ready(function(){
    $('#star').raty({
      starOff: "<%= asset_path("star-off.png") %>",
      starOn: "<%= asset_path("star-on.png")  %>",
      number: 5,
      readOnly: true,
    });
  });
</script>

<h1>商品詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-5">
      <%= attachment_image_tag @item, :image, format: 'jpg', size: "300x300" %>
    </div>
    <div class="col-6">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格</th>
          <td>
            ￥<%= @item.price.to_s(:delimited) %>
          </td>
          <tr>
          <th>(税抜価格)</th>
          <td>
            （￥<%= (@item.price * 1.1).floor.to_s(:delimited) %>）
          </td>
        </tr>
      </table>
      </br>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-dark" %>
    </div>
  </div>
  </br>
  </br>
  <div class="row">
    <h3>レビュー一覧</h3>
    <span>(<%= @reviews.count %>件のレビュー)</span>
  </div>
  </br>
  <div class="row">
    <div>平均スコア：　</div>
    <div id='star' data-score="<%= @average_score.round %>"></div>
    <div>（<%= @average_score %>）</div>
  </div>
  </br>
  <% @reviews.each do |review| %>
    <div class="row">
      <div>
        <%= review.age_i18n %>｜
        身長：<%= review.height %>cm｜
        体型：<%= review.figure%>
        </br>
        <%= review.comment %>
      </div>
    </div>
  <% end %>

</div>
