<div class="text-center">
  <h2>ジャンル新規登録</h2>
  </br>
  <%= form_with model:@genre, url:admin_genres_path, method: :POST, local: true do |f| %>
    <div class="field">
      <%= f.label :"ジャンル名", class:"mr-3" %>
      <%= f.text_field :name %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-secondary" %>
    </div>
  <% end %>

  </br>
  </br>

  <h2>ジャンル一覧</h2>
  </br>
  <div class="row d-flex justify-content-center">
    <table class="table table-striped table-bordered table-sm col-3">
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-secondary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>