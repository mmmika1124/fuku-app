<div class="text-center">
  <h2>注文履歴一覧</h2>
  </br>
  <div class="row d-flex justify-content-center text-left">
    <table class="table table-bordered table-sm col-5">
      <thead class="thead-light">
        <tr>
          <th width="15%">注文番号</th>
          <th width="30%">購入日時</th>
          <th width="30%">氏名</th>
          <th width="15%">注文品数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.id, admin_order_path(order.id) %></td>
            <td><%= order.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
