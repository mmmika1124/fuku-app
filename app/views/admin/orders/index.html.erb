<div class="container">
  <div class="text-center">
    <h1>会員一覧</h1>
    <table>
      <thead>
        <tr>
          <th>注文番号</th>
          <th>購入日時</th>
          <th>氏名</th>
          <th>注文品数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.id, admin_order_path(order.id) %></td>
            <td><%= order.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>