<!DOCTYPE html>
<html>
  <head>
    <title>MW</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class= "bg-dark">
      <nav class="navbar navbar-expand-lg">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path %>
            </li>
            <li class="nav-item">
              <%= link_to "お気に入り", bookmark_customers_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "TOPページ", admin_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "会員登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <main>
      </br>
      <%= yield %>
      </br>
      </br>
    </main>
    <footer class= "bg-dark">
      <div>
        <h6 class= "footer-text">お問い合わせ</h6>
        <h6 class= "footer-text">＠saikai mika</h6>
      </div>
    </footer>
  </body>
</html>
