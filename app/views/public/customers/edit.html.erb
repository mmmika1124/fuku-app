<div class="container">
  <h2>会員情報変更</h2>
  </br>
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <% @customer.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model:@customer, url:customer_path, method: :PATCH, local: true do |f| %>
    <div class="field">
      <%= f.label "お名前", class:"col-2 font-weight-bold" %>
      <%= f.text_field :last_name, class:"col-2" %>
      <%= f.text_field :first_name, class:"col-2" %>
    </div>
    </br>
    <div class="field">
      <%= f.label "郵便番号", class:"col-2 font-weight-bold" %>
      <%= f.text_field :postal_code, class:"col-2" %>
    </div>
    </br>
    <div class="field">
      <%= f.label "住所", class:"col-2 font-weight-bold" %>
      <%= f.text_field :address, class:"col-4" %>
    </div>
    </br>
    <div class="field">
      <%= f.label "メールアドレス", class:"col-2 font-weight-bold" %>
      <%= f.text_field :email, class:"col-4" %>
    </div>
    </br>
    </br>
    <div class="actions">
      <%= f.submit "変更を保存", class:"btn btn-outline-dark btn-sm " %>
    </div>
  <% end %>
</div>
