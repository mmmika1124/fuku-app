<div class="container">
  <h2>マイページ</h2>
  </br>
  <table class="table table-borderless col-6">
    <tbody>
      <tr>
        <th>お名前</th>
        <td><%= @customer.last_name + "　" + @customer.first_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td>〒<%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  </br>
  <div>
    <%= link_to "登録情報を変更する",edit_customer_path(@customer.id), class:"btn btn-outline-dark btn-sm" %>
  </div>
  </br>
  <div>
    <%= link_to "注文履歴一覧を見る",orders_path, class:"btn btn-outline-dark btn-sm" %>
  </div>
</div>