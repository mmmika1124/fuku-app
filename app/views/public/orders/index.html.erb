<h1>注文履歴</h1>
<table>
<% @orders.each do |order| %>
  <tr>
    <th>注文日</th>
    <td><%= order.updated_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>注文番号</th>
    <td><%= order.id %></td>
  </tr>
  <tr>
    <th>支払金額</th>
    <td>￥<%= (order.total_payment).to_s(:delimited) %></td>
  </tr>
  <tr>
    <th></th>
    <td><%= link_to "詳細", order_path(order.id) %></td>
  </tr>
<% end %>
</table>
