<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "public/search", q: @search %>
    </div>
    <div class="col-9">
      <h5 class="text-center">view all</h5>
      </br>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-3 mb-3">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format: 'jpg', size: "150x150" %><br>
              <%= item.name %><br>
              ï¿¥<%= (item.price * 1.1).floor.to_s(:delimited) %><br>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>